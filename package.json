{
  "name": "repvet",
  "version": "0.9.3",
  "description": "Maintainer reputation checker for npm packages",
  "type": "module",
  "main": "dist/index.js",
  "bin": {
    "repvet": "dist/cli.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:unit": "node --experimental-vm-modules node_modules/jest/bin/jest.js --selectProjects unit",
    "test:e2e": "node --experimental-vm-modules node_modules/jest/bin/jest.js --selectProjects e2e",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "typecheck": "tsc --noEmit",
    "check": "npm run typecheck && npm run lint && npm run test:unit",
    "check:full": "npm run typecheck && npm run lint && npm run test",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "security",
    "npm",
    "maintainer",
    "reputation",
    "supply-chain",
    "sbom"
  ],
  "author": "taku-tez",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/taku-tez/RepVet.git"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "p-limit": "^7.3.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
    "@types/jest": "^29.5.0",
    "@types/node": "^22.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.7.0"
  }
}
